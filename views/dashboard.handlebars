<h1>Your Dashboard</h1>

<a href="/posts/new">Create New Post</a>


{{#if posts.length}}
    <h2>Your Posts:</h2>
    <ul>
        {{#each posts}}
            <li>
                <a href="/posts/{{this.id}}">{{this.title}}</a>
                <p>{{this.content}}</p>
                <form action="/posts/{{this.id}}?_method=DELETE" method="POST">
                    <button type="submit">Delete</button>
                </form>
            </li>
        {{/each}}
    </ul>
{{else}}
    <p>You have no posts yet. Create your first post!</p>
{{/if}}
